<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.example</groupId>
  <artifactId>javafx-paint</artifactId>
  <name>JavaFX Paint</name>
  <version>1.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>${maven.compiler.release}</release>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedClassifierName>shaded</shadedClassifierName>
              <transformers>
                <transformer>
                  <mainClass>com.example.paint.PaintApp</mainClass>
                </transformer>
              </transformers>
              <minimizeJar>false</minimizeJar>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.example.paint.PaintApp</mainClass>
          <launcher>NovaPaint</launcher>
          <stripDebug>true</stripDebug>
          <noHeaderFiles>true</noHeaderFiles>
          <noManPages>true</noManPages>
          <compress>2</compress>
          <addModules>javafx.controls,javafx.graphics,javafx.fxml,javafx.swing,java.desktop</addModules>
          <jvmArgs>
            <jvmArg>--enable-native-access=ALL-UNNAMED</jvmArg>
          </jvmArgs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>win</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>jpackage-win</id>
                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>${jpackage.executable}</executable>
                  <arguments>
                    <argument>--name</argument>
                    <argument>NovaPaint</argument>
                    <argument>--app-version</argument>
                    <argument>1.0.0</argument>
                    <argument>--vendor</argument>
                    <argument>Your Company</argument>
                    <argument>--type</argument>
                    <argument>exe</argument>
                    <argument>--input</argument>
                    <argument>${project.build.directory}</argument>
                    <argument>--main-jar</argument>
                    <argument>${project.artifactId}-${project.version}.jar</argument>
                    <argument>--main-class</argument>
                    <argument>com.example.paint.PaintApp</argument>
                    <argument>--runtime-image</argument>
                    <argument>${project.build.directory}/${project.artifactId}-${project.version}</argument>
                    <argument>--icon</argument>
                    <argument>src/main/resources/packaging/icon.ico</argument>
                    <argument>--win-console</argument>
                    <argument>false</argument>
                    <argument>--java-options</argument>
                    <argument>--enable-native-access=ALL-UNNAMED</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
      <properties>
        <jpackage.executable>"C:\Program Files\Java\jdk-24\bin\jpackage.exe"</jpackage.executable>
      </properties>
    </profile>
    <profile>
      <id>mac</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>jpackage-mac</id>
                <phase>none</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>jpackage</executable>
                  <arguments>
                    <argument>--name</argument>
                    <argument>NovaPaint</argument>
                    <argument>--app-version</argument>
                    <argument>1.0.0</argument>
                    <argument>--vendor</argument>
                    <argument>Your Company</argument>
                    <argument>--type</argument>
                    <argument>dmg</argument>
                    <argument>--input</argument>
                    <argument>${project.build.directory}</argument>
                    <argument>--main-jar</argument>
                    <argument>${project.artifactId}-${project.version}.jar</argument>
                    <argument>--main-class</argument>
                    <argument>com.example.paint.PaintApp</argument>
                    <argument>--runtime-image</argument>
                    <argument>${project.build.directory}/${project.artifactId}-${project.version}</argument>
                    <argument>--icon</argument>
                    <argument>src/main/resources/packaging/icon.icns</argument>
                    <argument>--java-options</argument>
                    <argument>--enable-native-access=ALL-UNNAMED</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>linux</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>jpackage-linux</id>
                <phase>none</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>jpackage</executable>
                  <arguments>
                    <argument>--name</argument>
                    <argument>NovaPaint</argument>
                    <argument>--app-version</argument>
                    <argument>1.0.0</argument>
                    <argument>--vendor</argument>
                    <argument>Your Company</argument>
                    <argument>--type</argument>
                    <argument>deb</argument>
                    <argument>--input</argument>
                    <argument>${project.build.directory}</argument>
                    <argument>--main-jar</argument>
                    <argument>${project.artifactId}-${project.version}.jar</argument>
                    <argument>--main-class</argument>
                    <argument>com.example.paint.PaintApp</argument>
                    <argument>--runtime-image</argument>
                    <argument>${project.build.directory}/${project.artifactId}-${project.version}</argument>
                    <argument>--icon</argument>
                    <argument>src/main/resources/packaging/icon.png</argument>
                    <argument>--java-options</argument>
                    <argument>--enable-native-access=ALL-UNNAMED</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <properties>
    <maven.compiler.release>17</maven.compiler.release>
    <app.vendor>Your Company</app.vendor>
    <jpackage.executable>jpackage</jpackage.executable>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>22.0.1</javafx.version>
    <app.name>NovaPaint</app.name>
    <app.version>1.0.0</app.version>
  </properties>
</project>
